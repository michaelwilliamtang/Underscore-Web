<div class="row"></div>
<div class="row">
    <div class="col s12 m8">
        <a href={{post.link}}><h3 class="truncate">{{post.link}}</h3></a>
        <div class="card post">
            <div class="card-content">
                <span class="card-title">{{formatDate post.date 'MMMM Do YYYY'}}</span>
                {{{post.snippet}}}
            </div>
        </div>
        
        {{#if post.allowComments}}
        <h4>Comments</h4>
        <div class="card">
            <div class="card-content">
                <span class="card-title">New Comment</span>
                {{#if user}}
                    <form method="post" action="/posts/comments/{{post.id}}">
                        <div class="input-field">
                            <textarea name="commentBody" id="commentBody" class="materialize-textarea"></textarea>
                            <label for="commentBody">Add Comment</label>
                        </div>
                        <input type="submit" value="Submit" class="btn">
                    </form>
                {{else}}
                <p><a href="/auth/google">Login</a> to comment</p>
                {{/if}}
            </div>
        </div>

        {{#each post.comments}}
        <div class="card">
            <div class="card-content">
                <h5>{{commentBody}}</h5>
                <br>
                <div class="chip">
                    <img src="{{commentUser.image}}">
                    {{commentUser.firstName}} {{commentUser.lastName}}
                </div>
                <br>
                <small>Posted {{formatDate commentDate 'MMMM Do YYYY'}}</small>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>

    <div class="col s12 m3 offset-m1">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{post.user.firstName}} {{post.user.lastName}}</span>
                <br>
                <img src="{{post.user.image}}" class="circle responsive-img">
            </div>
            {{!-- <div class="card-action">
                <a href="/posts/user/{{post.user.id}}">More From {{post.user.firstName}}</a>
            </div> --}}
        </div>
    </div>
</div>