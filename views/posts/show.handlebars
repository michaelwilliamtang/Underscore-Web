<div class="row">
    <div class="col s12 m8">
        <h3>{{post.link}}</h3>
        <div class="card post">
            <div class="card-content">
                <span class="card-title">{{formatDate post.date 'MMMM Do YYYY'}}</span>
                {{{post.snippet}}}
            </div>
        </div>
    </div>
    <div class="col s12 m3 offset-m1">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{post.user.firstName}} {{post.user.lastName}}</span>
                <img src="{{post.user.image}}" class="circle responsive-img">
            </div>
            {{!-- <div class="card-action">
                <a href="/posts/user/{{post.user.id}}">More From {{post.user.firstName}}</a>
            </div> --}}
        </div>
    </div>
</div>